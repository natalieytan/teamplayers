<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Skill</th>
      <th>Description</th>
      <th>Location</th>
      <th>Matchday</th>
      <th>Cost</th>
      <th>Open to public</th>
      <th>Message to public</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.team %></td>
        <td><%= game.skill %></td>
        <td><%= game.description %></td>
        <td><%= game.location %></td>
        <td><%= game.matchday %></td>
        <td><%= game.cost %></td>
        <td><%= game.open_to_public %></td>
        <td><%= game.message_to_public %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_team_game_path(@team) %>
